<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/openbook"
    tools:context=".HistoryActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/amiri"
                android:paddingLeft="30dp"
                android:text="@string/history"
                android:textColor="#201F20"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/stephistory"
                style="@android:style/Widget.Holo.Light.Button.Toggle"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="@string/stephistory"
                android:textSize="14sp" />

            <Button
                android:id="@+id/waterhistory"
                style="@android:style/Widget.Holo.Light.Button.Toggle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/waterhistory" />

            <Button
                android:id="@+id/sleephistory"
                style="@android:style/Widget.Holo.Light.Button.Toggle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/sleephistory" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>