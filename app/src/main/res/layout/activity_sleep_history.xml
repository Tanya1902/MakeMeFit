<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkorigami"
    tools:context=".SleepHistoryActivity">

  <TextView
      android:id="@+id/list_sleep"
      android:layout_width="300dp"
      android:layout_height="500dp"
      android:layout_margin="30dp"
      android:background="#52FFFFFF"
      android:fadeScrollbars="true"
      android:isScrollContainer="true"
      android:lineSpacingExtra="10sp"
      android:padding="50dp"
      android:scrollbars="vertical"
      android:textColor="#100F0F"
      android:textSize="18sp"
      android:verticalScrollbarPosition="right"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ScrollView
      android:id="@+id/scrollview3"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
  </ScrollView>

  <TextView
      android:id="@+id/textView15"
      style="@android:style/Widget.Holo.TextView.SpinnerItem"
      android:layout_width="303dp"
      android:layout_height="106dp"
      android:layout_marginTop="70dp"
      android:fontFamily="@font/amiri"
      android:text="Date - Sleep Hours"
      android:textColor="#FFFFFF"
      android:textSize="25dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/list_sleep"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>